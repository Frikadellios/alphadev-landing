---
import Byline from '@/components/Byline.astro'
import PostTags from '@/components/PostTags.astro'
import MainI18n from '@/components/MainI18n.astro'
import type { CollectionEntry } from 'astro:content'
import Layout from './Layout.astro'
import { Badge } from '@/components/ui/badge'
import { buttonVariants } from '@/components/ui/button'
import { cn } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import { mdxComponent } from '../components/content/mdx-component'
type Props = CollectionEntry<'blog'>['data']

const frontmatter = Astro.props
const { title, pubDate, updatedDate, previewImage, tags, author, category } =
    Astro.props
const realTags: string[] = tags.filter((tag) => {
    return tag !== 'other'
  })
---

<Layout>
  <MainI18n {frontmatter} collection="blog">
    <main id="main" tabindex="”1”">
      <div class="container relative max-w-screen-md py-10">
        <a
          href="/blog"
          class={cn(
            buttonVariants({ variant: 'ghost' }),
            'absolute left-[-200px] top-10 hidden xl:inline-flex text-muted-foreground',
          )}
          transition:animate="slide"
        >
          <i data-lucide="chevron-left"></i>
          See all posts
        </a>
        <article class="prose max-w-none dark:prose-invert">
          <Badge
            radius="md"
            className="capitalize"
            transition:name={'category-'}
          >
            {category}
          </Badge>
          <header>
            {
              previewImage && (
                <Image
                  class="my-6 overflow-hidden rounded-xl"
                  width={1020}
                  height={510}
                  src={previewImage}
                  alt=""
                  transition:name={'img-'}
                />
              )
            }
            <h1
              class="my-4 font-heading text-4xl"
              transition:name={'post-title'}
            >
              {title}
            </h1>
            <Byline authorFullName={author} {pubDate} {updatedDate} />
            <hr class="my-6" />
            <div>
              <mdxComponent>
                <slot />
              </mdxComponent>
            </div>
            {
              realTags.length > 0 && (
                <footer>
                  <PostTags tags={realTags} />
                </footer>
              )
            }
          </header>
        </article>
      </div>
    </main>
  </MainI18n></Layout
>